<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.MainActivity">

    <EditText
        android:id="@+id/email"
        android:layout_width="289dp"
        android:layout_height="50dp"
        android:layout_marginBottom="54dp"
        android:ems="10"
        android:hint="e posta adresi giriniz"
        android:inputType="text"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <EditText
        android:id="@+id/password"
        android:layout_width="292dp"
        android:layout_height="47dp"
        android:layout_marginBottom="58dp"
        android:ems="10"
        android:hint="şifre giriniz ..."
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintBottom_toTopOf="@+id/uyeOl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email" />

    <Button
        android:id="@+id/girisbtn"

        android:layout_width="123dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="83dp"
        android:layout_marginEnd="34dp"
        android:text="Giriş Yap"
        app:layout_constraintBaseline_toBaselineOf="@+id/uyeOl"
        app:layout_constraintEnd_toStartOf="@+id/uyeOl"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/uyeOl"
        android:layout_width="123dp"
        android:layout_height="48dp"
        android:layout_marginEnd="61dp"
        android:layout_marginBottom="93dp"
        android:text="Üye Ol"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/girisbtn"
        app:layout_constraintTop_toBottomOf="@+id/password" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="328dp"
        android:layout_height="361dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="41dp"

        app:circularflow_defaultRadius="500dp"
        app:layout_constraintBottom_toTopOf="@+id/email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_launcher_background" />

</androidx.constraintlayout.widget.ConstraintLayout>